            <Button x:Name="BTextBox" Content="Button" Canvas.Left="75" Canvas.Top="10" Width="92" Height="37" Click="BTextBox_Click"/>
            <Button x:Name="BListBox" Content="Button" Canvas.Left="475" Canvas.Top="10" Width="87" Height="37" Click="BListBox_Click"/>
        </Canvas>
        <DataGrid x:Name="MyDataGrid" HorizontalAlignment="Left" Height="299" Margin="289,64,0,0" VerticalAlignment="Top" Width="443" IsSynchronizedWithCurrentItem="True"/>

    </Grid>
