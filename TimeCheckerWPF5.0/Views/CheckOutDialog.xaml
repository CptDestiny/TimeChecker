<Window x:Class="TimeCheckerWPF5._0.Views.CheckOutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeCheckerWPF5._0.Views"
        xmlns:viewmodels="clr-namespace:TimeCheckerWPF5._0.ViewModels"
             mc:Ignorable="d"
        Title="Checking Out..." Height="200" Width="300">

    <Window.DataContext>
        <viewmodels:CheckOutDialogViewModel/>
    </Window.DataContext>

    <Grid>
        <TextBlock Text="You are about to Check out. You have the possibility to leave a comment or check out without.  " HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>
        <TextBox HorizontalAlignment="Center" Height="61" Margin="0,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>
        <Button Content="Check out" HorizontalAlignment="Left" Margin="27,127,0,0" VerticalAlignment="Top" Width="61" Height="33" Command="{Binding CheckOutCommand}" />
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="212,127,0,0" VerticalAlignment="Top" Width="61" Height="33" Command="{Binding CancelCommand}"/>


    </Grid>
</Window>
