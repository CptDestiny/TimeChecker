<UserControl x:Class="TimeCheckerWPF5._0.Views.Navigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeCheckerWPF5._0.Views"
             xmlns:viewmodels="clr-namespace:TimeCheckerWPF5._0.ViewModels"
             xmlns:navi="clr-namespace:TimeCheckerWPF5._0.Stores"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="100">
    <Grid>

        <StackPanel Background="DeepSkyBlue" Width="100" HorizontalAlignment="Left">
            <Label Content="Menu" HorizontalContentAlignment="Center" FontSize="14" VerticalContentAlignment="Center" Height="50" Background="Orange"/>
            <Button Content="TimeChecker" Width="Auto" Command="{Binding UpdateCurrentViewModelCommand}" CommandParameter="{x:Static navi:ViewType.TimeChecker}"/>
            <Button Content="Catched Times" Width="Auto" Command="{Binding UpdateCurrentViewModelCommand}" CommandParameter="{x:Static navi:ViewType.ElapsedTimes}"/>
            <Button Content="Exit" Width="Auto"/>
            <Button Content="Help" Width="Auto" VerticalAlignment="Bottom" />
        </StackPanel>
    </Grid>
</UserControl>
