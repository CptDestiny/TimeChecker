<Window x:Class="TimeCheckerWPF5._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeCheckerWPF5._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Canvas >
        <DataGrid x:Name="TimeentryGrid" AutoGenerateColumns="False" Margin="20" Height="260" Width="459" Canvas.Left="269" Canvas.Top="10">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID}"
                                    Header="ID" Width="SizeToHeader" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Type}" Header="Type"
                                    Width="200"/>
                <DataGridTextColumn Binding="{Binding DateTime}" Header="DateandTime"
                                    Width="*"/>
                <DataGridTextColumn Binding="{Binding Comment}" Header="Comment"
                                    Width="*"/>
                <DataGridTextColumn Binding="{Binding User}" Header="User"
                                    Width="SizeToHeader"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Insert" Canvas.Left="62" Canvas.Top="338" Height="49" Width="83" FontSize="16" FontWeight="Bold" Background="#FF810C0C" Foreground="#FFEADDDD"/>
        <Button Content="Update" Canvas.Left="317" Canvas.Top="338" Height="50" Width="83" FontSize="16" FontWeight="Bold" Background="#FF810C0C" Foreground="#FFEADDDD"/>
        <Button Content="Delete" Canvas.Left="541" Canvas.Top="338" Height="49" Width="83" FontSize="16" FontWeight="Bold" Background="#FF810C0C" Foreground="#FFEADDDD"/>
        <Label Content="Type" Canvas.Left="35" Canvas.Top="55"/>
        <Label Content="Comment" Canvas.Left="21" Canvas.Top="134"/>
        <Label Content="User" Canvas.Left="36" Canvas.Top="217"/>
        <TextBox Canvas.Left="116" Canvas.Top="59" TextWrapping="Wrap" Width="120"/>
        <TextBox Canvas.Left="116" Canvas.Top="138" TextWrapping="Wrap" Width="120"/>
        <TextBox Canvas.Left="116" Canvas.Top="221" TextWrapping="Wrap" Width="120"/>
    </Canvas>

</Window>
