<Window x:Class="TimeCheckerWPF5._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeCheckerWPF5._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Canvas >
        <DataGrid x:Name="TimeentryGrid" AutoGenerateColumns="False" Margin="20" Height="260" Width="459" Canvas.Left="269" Canvas.Top="10">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID}"
                                    Header="ID" Width="SizeToHeader" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Type}" Header="Type"
                                    Width="SizeToHeader"/>
                <DataGridTextColumn Binding="{Binding DateTime}" Header="DateandTime"
                                    Width="*"/>
                <DataGridTextColumn Binding="{Binding Comment}" Header="Comment"
                                    Width="*"/>
                <DataGridTextColumn Binding="{Binding User}" Header="User"
                                    Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="InsertBtn" Content="Insert" Canvas.Left="62" Canvas.Top="338" Height="49" Width="83" FontSize="16" FontWeight="Bold" Background="#FF810C0C" Foreground="#FFEADDDD" Click="Insert"/>
        <Button x:Name="UpdateBtn" Content="Update" Canvas.Left="189" Canvas.Top="337" Height="50" Width="83" FontSize="16" FontWeight="Bold" Background="#FF810C0C" Foreground="#FFEADDDD" Click="UpdateBtn_Click"/>
        <Button x:Name="DeleteBtn" Content="Delete" Canvas.Left="376" Canvas.Top="339" Height="49" Width="83" FontSize="16" FontWeight="Bold" Background="#FF810C0C" Foreground="#FFEADDDD" Click="DeleteBtn_Click"/>
        <Button Content="Clear" Canvas.Left="642" Canvas.Top="339" Height="49" Width="83" FontSize="16" FontWeight="Bold" Background="#FF810C0C" Foreground="#FFEADDDD" Click="Button_Click"/>
        <Label Content="Type" Canvas.Left="35" Canvas.Top="55"/>
        <Label Content="Comment" Canvas.Left="21" Canvas.Top="134"/>
        <Label Content="User" Canvas.Left="36" Canvas.Top="217"/>
        <TextBox x:Name="Type_txt" Canvas.Left="116" Canvas.Top="59" TextWrapping="Wrap" Width="120"/>
        <TextBox x:Name="Comment_txt" Canvas.Left="116" Canvas.Top="138" TextWrapping="Wrap" Width="120"/>
        <TextBox x:Name="User_txt" Canvas.Left="116" Canvas.Top="221" TextWrapping="Wrap" Width="120"/>
        <Label Content="ID" Canvas.Left="305" Canvas.Top="334" Width="28" Height="24"/>
        <TextBox x:Name="ID_txt" Canvas.Left="289" Canvas.Top="364" TextWrapping="Wrap" Width="60"/>
    </Canvas>

</Window>
