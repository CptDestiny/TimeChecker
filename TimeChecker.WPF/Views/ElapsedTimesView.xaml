<UserControl x:Class="TimeChecker.WPF.Views.ElapsedTimeItemList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeChecker.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="275" d:DesignWidth="400">


    <Grid Background="Black">
        <StackPanel>
            <TextBox x:Name ="ElapesedTimeItemListHeader" Text ="Recorded times" TextAlignment="Center"/>
            <ListBox x:FieldModifier="public" x:Name="ElapsedTimeItem" Height="100" Width="390" HorizontalAlignment="Left" Margin="10"/>
            <TextBox x:Name ="ElapesedBreaktItemListHeader" Text ="Recorded breaks" TextAlignment="Center" />
            <ListBox x:FieldModifier="public" x:Name="ElapsedBreakItemList" Height="100" Width="390" HorizontalAlignment="Left" Margin="10"/>

        </StackPanel>
    </Grid>
</UserControl>
