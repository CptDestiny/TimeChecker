<Window x:Class="TodoManager.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoManager.GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel>
        <DataGrid x:Name="TodoItemGrid" AutoGenerateColumns="False" Margin="20">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}"
                                    Header="TodoItem Id" Width="SizeToHeader" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Type}" Header="Title"
                                    Width="200"/>
                <DataGridTextColumn Binding="{Binding Description}" Header="Description"
                                    Width="*"/>
                <DataGridTextColumn Binding="{Binding Completed}" Header="Completed"
                                    Width="SizeToHeader"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
