@{

    ViewData["Title"] = "Employee";

}


<style>

    body {
        background-color: moccasin;
    }

    table {
        background-color: cadetblue;
    }
</style>



<!--
   Button "Create Employee" erstellen und Form CreateEdit abschicken
-->
<form asp-action="CreateEdit">
    <button type="submit" class="btn btn-primary"> + Create Employee  </button>
</form>

<hr />


<!--
   Table rows erstellen
-->
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <!--
            <th>ID</th>
            -->
            <th>Vorname</th>
            <th>Nachname</th>
            <th>Bearbeiten</th>
            <th>Löschen</th>
        </tr>
    </thead>


    <tbody>
        @{
            // Inhalt ViewBag in Variable employee übergeben und die einzelnen Attribute anzeigen
            foreach (var employee in ViewBag.Employees)
            {
                <tr>
                    <td hidden>
                        @employee.Id
                    </td>
                    <td>
                        @employee.Prename
                    </td>
                    <td>
                        @employee.Lastname
                    </td>
                    <td>
                        <!--
                        Button "Bearbeiten" erstellen und Form CreateEdit an Controller abschicken
                        -->
                        <form asp-action="CreateEdit" asp-route-id="@employee.Id">
                            <button type="submit" class="btn btn-warning">Bearbeiten</button>
                        </form>
                    </td>
                    <td>
                        <!--
                        Button "Löschen" erstellen und Form DeleteEmployee an Controller abschicken
                        -->
                        <form asp-action="DeleteEmployee" asp-route-id="@employee.Id">
                            <button type="submit" class="btn btn-danger">Löschen</button>
                        </form>
                    </td>
                </tr>

            }

        }
    </tbody>

</table>




